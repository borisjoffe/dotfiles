#keystate_capslock = enable



#Lock Screen
"locknow.sh"
    m:0x40 + c:33
    Mod4 + l 

#Suspend (with locking)
"suspend.sh"
    m:0x40 + c:47
    Mod4 + s 

#Hibernate (with locking)
"suspend.sh hibernate"
    m:0x40 + c:44
    Mod4 + h 

#Mute volume
"amixer -c 0 set Master toggle"
    m:0x0 + c:121
    XF86AudioMute 

#Raise volume
"amixer -c 0 set Master 5+"
    m:0x0 + c:123
    XF86AudioRaiseVolume 

#Lower volume
"amixer -c 0 set Master 5-"
    m:0x0 + c:122
    XF86AudioLowerVolume 

#Screenshot Full Screen (Multimonitor)
"redshift -x; cd ~; scrot --multidisp; notify.sh "Desktop screenshot successful""
    m:0x0 + c:107
    Print 

#Screenshot - Select region
"redshift -x; pkill redshift; cd ~; TIMEOUT=1000 notify.sh "Select a region"; scrot --select; notify.sh "Selection screenshot successful"; nohup redshift -o"
    m:0x1 + c:107
    Shift + Print 

#Screenshot focused window
"redshift -x; cd ~; scrot --focused; notify.sh "Window screenshot successful""
    m:0x8 + c:107
    Alt + Print 

